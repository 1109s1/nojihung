import java.util.Scanner;

public class C_prac3 {

	public static void main(String[] args) {

		int num;
		System.out.println("숫자를 입력하세요.");
		Scanner s = new Scanner(System.in);
		num=s.nextInt();
		
		for(int i=0;i<num;i++){
		    for(int j=num-1;j>i;j--){
		        System.out.printf(" ");
		    }
			    
		    for(int j=0;j<2*i+1;j++){
		    	System.out.printf("*");
		    }
		    System.out.printf("\n");
		}
	}


		
	}


